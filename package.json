{
  "name": "weapp-lifecycle-hook-plugin",
  "version": "1.0.1",
  "description": "Add global lifecycle listeners for weapp.",
  "main": "lib/index.js",
  "scripts": {
    "watch": "babel --watch src --out-dir lib -x .tsx,.ts & tsc -w",
    "build": "babel src --out-dir lib -x .tsx,.ts && tsc",
    "prepare": "yarn build",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "src",
    "package.json",
    "tsconfig.json",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "author": "santree",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-xigua": "^3.1.5",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeasonnow/weapp-lifecycle-hook-plugin"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -p false",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ext .js,.jsx,.ts,.tsx --fix"
    ],
    "*.{html,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "core-js": "2"
  }
}
